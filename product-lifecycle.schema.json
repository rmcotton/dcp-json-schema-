{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Mixin schema for Product lifecycle indicators",
    "properties": {
      "obsolete": {
          "type": [
              "boolean",
              "null"
          ],
          "default": false,
          "description": "Obsolete"
      },
       "discontinued": {
          "type": [
              "boolean",
              "null"
          ],
          "default": false,
          "description": "Discontinued"
       },
        "overstock_threshold": {
          "type": [
              "integer",
              "null"
          ],
          "description": "Overstock threshold"
       }  
    }
}
